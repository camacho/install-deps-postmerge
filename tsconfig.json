{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "target": "es2018",
    "lib": ["ES2018"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
