{
  "name": "install-deps-postmerge",
  "version": "1.0.1",
  "description": "Install package.json dependencies using npm or yarn as git post merge hook",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camacho/install-deps-postmerge.git"
  },
  "bugs": {
    "url": "https://github.com/camacho/install-deps-postmerge/issues"
  },
  "homepage": "https://github.com/camacho/install-deps-postmerge#readme",
  "author": "Patrick <patrick@daftdevelopers.com>",
  "bin": "bin/index.js",
  "main": "index.js",
  "scripts": {
    "format": "npm-run-all format:*",
    "format:pkg": "format-package -q -w",
    "format:src": "prettier --write \"**/*.{js,md,json}\"",
    "lint": "eslint \"**/*.js\""
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "format-package",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "post-merge": "./bin/index.js",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "git",
    "hook",
    "post",
    "merge",
    "install",
    "dependences",
    "deps",
    "pull"
  ],
  "dependencies": {
    "execa": "^1.0.0",
    "yarn-or-npm": "^2.0.4"
  },
  "devDependencies": {
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "format-package": "^4.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  }
}
