{
  "name": "install-deps-postmerge",
  "version": "1.1.0",
  "description": "Install package.json dependencies whenever needed after a git merge",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/camacho/install-deps-postmerge.git"
  },
  "bugs": {
    "url": "https://github.com/camacho/install-deps-postmerge/issues"
  },
  "homepage": "https://github.com/camacho/install-deps-postmerge#readme",
  "author": "Patrick <patrick@daftdevelopers.com>",
  "keywords": [
    "git",
    "hook",
    "post",
    "merge",
    "install",
    "dependences",
    "deps",
    "pull"
  ],
  "bin": {
    "idpm": "dist/cli/index.js",
    "install-deps-postmerge": "dist/cli/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "prebuild": "yon clean",
    "build": "tsc",
    "clean": "npx rimraf dist/*",
    "commit": "npx git-cz",
    "dev": "tsc -w",
    "docs": "ts-node scripts/markdown.ts",
    "format": "npm-run-all format-*",
    "format-package": "format-package --write",
    "format-source": "prettier . --write",
    "gamut": "npm-run-all reset format lint type-check test build",
    "lint": "eslint . --ext .ts",
    "prerelease": "yon gamut",
    "release": "node-env-run --exec 'semantic-release --ci false'",
    "prerelease-dry-run": "yon gamut",
    "release-dry-run": "node-env-run --exec 'semantic-release --ci false --dry-run'",
    "reset": "npx rimraf node_modules dist/*",
    "postreset": "yarn install",
    "start": "node ./dist/cli/index.js",
    "start-dev": "ts-node ./src/cli/index.ts",
    "test": "echo No tests yet.",
    "type-check": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-merge": "install-deps-postmerge",
      "pre-commit": "lint-staged",
      "pre-push": "yon test"
    }
  },
  "lint-staged": {
    "*.md": [
      "yon docs",
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint"
    ],
    "*.{js,json,yaml,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "dependencies": {
    "execa": "^4.0.3",
    "yarn-or-npm": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/markdown-magic": "^1.0.0",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.9.1",
    "commitizen": "^4.1.5",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "markdown-magic": "^1.0.0",
    "markdown-magic-engines": "^1.0.2",
    "markdown-magic-install-command": "^^1.3.1",
    "node-env-run": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^3"
  }
}
